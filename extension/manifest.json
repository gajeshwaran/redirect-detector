{
  "manifest_version": 3,
  "name": "Invisible Redirect Protector",
  "version": "1.0",
  "description": "Real-time security analysis for every site you visit. Based on 'Invisible Redirect Detector'.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://invisible-redirect-detector.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}